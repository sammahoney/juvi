/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */

/* @var $this Mage_Catalog_Block_Product_View_Media */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<div class="product-image">
    <div class="product-image-gallery">
        <div class="swiper-container">
            <div class="swiper-wrapper">
                <?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
                    <div class="swiper-slide">
                        <div class="slide slide-l">
                            <img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_product->getFile())->resize(600,900); ?>" alt="<?php echo $this->escapeHtml($_product->getLabel()) ?>" />
                        </div>
                    </div>
                <?php else: ?>
                    <div class="swiper-slide">
                        <div class="slide slide-l">
                            <?php
                            $_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(600,900).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" title="'.$this->htmlEscape($this->getImageLabel()).'" />';
                            echo $_helper->productAttribute($_product, $_img, 'image');
                            ?>
                        </div>
                    </div>
                <?php endif; ?>
                <?php if (count($this->getGalleryImages()) > 0): ?>
                    <?php foreach ($this->getGalleryImages() as $_image): ?>
                        <?php if (basename($_image->getFile()) != basename($_product->getImageUrl())): ?>
                        <div class="swiper-slide">
                            <div class="slide slide-l">
                                <img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->resize(600,900); ?>" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" />
                            </div>
                        </div>
                        <?php endif; ?>
                    <?php endforeach; ?>
                <?php endif; ?>
            </div>
        </div>
    </div>
</div>

<?php if (count($this->getGalleryImages()) > 0): ?>
<ul class="product-image-thumbs">
<?php $i=1; foreach ($this->getGalleryImages() as $_image): ?>
    <?php if ($this->isGalleryImageVisible($_image)): ?>
    <li>
        <a href="javascript:void(0);" onclick="mySwiper.slideTo(<?php echo $i; ?>)">
            <img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(65,98); ?>" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" />
        </a>
    </li>
    <?php endif; ?>
<?php $i++; endforeach; ?>
</ul>

<script type="text/javascript">
var mySwiper = new Swiper('.swiper-container',{
    loop:true,
    speed: 600,
    longSwipesRatio: 0.2
});
</script>
<?php endif; ?>

<?php echo $this->getChildHtml('after'); ?>
