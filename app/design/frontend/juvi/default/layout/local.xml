	<!-- Search List View -->
	<catalogsearch_result_index>
		<reference name="root">
			<action method="setTemplate">
				<template>page/2columns-left.phtml</template>
			</action>
		</reference>
	</catalogsearch_result_index>

	<sendfriend_product_send>
		<reference name="root">
			<action method="setTemplate">
				<template>page/1column.phtml</template>
