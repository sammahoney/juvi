<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">

	<default>
		<!-- Front-end and header updates. -->
		<reference name="head">
			<!-- Remove unwanted items -->
			<action method="removeItem"><type>skin_css</type><name>css/styles.css</name></action>
			<action method="removeItem"><type>skin_css</type><name>css/madisonisland.css</name></action>
			<action method="removeItem"><type>skin_css</type><name>css/madisonisland-ie8.css</name></action>
			<action method="removeItem"><type>skin_js</type><name>js/lib/jquery.cycle2.min.js</name></action>
			<action method="removeItem"><type>skin_js</type><name>js/lib/jquery.cycle2.swipe.min.js</name></action>
			<action method="removeItem"><type>skin_js</type><name>js/slideshow.js</name></action>
			<!-- Additional CSS/JS -->
			<action method="addItem">
				<type>skin_css</type>
				<name>css/styles.css</name>
			</action>
			<action method="addItem">
				<type>skin_css</type>
				<name>css/juvi.css</name>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/min/juvi-min.js</name>
				<params/>
			</action>
			<!-- Fonts -->
			<block type="core/text" name="google.fonts">
			    <action method="setText">
			        <text><![CDATA[<link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:300italic,400italic,700italic,400,300,700' rel='stylesheet' type='text/css'><link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>]]></text>
			    </action>
			</block>
			<block type="core/text" name="fontawesome">
			    <action method="setText">
			        <text><![CDATA[<link href="//netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">]]></text>
			    </action>
			</block>
		</reference>
		<reference name="before_body_end">
			<block type="cms/block" name="fixed_message">
				<action method="setBlockId"><block_id>fixed_message</block_id></action>
			</block>
		</reference>
	</default>

	<!-- Homepage -->
	<cms_index_index>
		<reference name="head">
			<!-- <block type="core/text" name="google.font">
				<action method="setText">
					<text><![CDATA[<link href="//fonts.googleapis.com/css?family=Prata" rel="stylesheet">]]></text>
				</action>
			</block> -->
			<action method="addItem">
				<type>skin_js</type>
				<name>js/swiper.jquery.min.js</name>
			</action>
			<action method="addItem">
				<type>skin_css</type>
				<name>css/swiper.min.css</name>
			</action>
		</reference>
	</cms_index_index>

	<!-- Category List View -->
	<catalog_category_view>
		<reference name="root">
			<action method="setTemplate">
				<template>page/2columns-left.phtml</template>
			</action>
		</reference>
	</catalog_category_view>

	<!-- Product Detail Page -->
	<catalog_product_view>
		<reference name="root">
			<action method="setTemplate">
				<template>page/1column.phtml</template>
			</action>
		</reference>
		<reference name="head">
			<action method="addItem">
				<type>skin_js</type>
				<name>js/swiper.jquery.min.js</name>
			</action>
			<action method="addItem">
				<type>skin_css</type>
				<name>css/swiper.min.css</name>
			</action>
		</reference>
	</catalog_product_view>

</layout>