<layout>
    
    <juvi_press_pressarticle_index translate="label" module="juvi_press">
        <label>Press Articles list</label>
        <update handle="page_one_column" />
        <reference name="content">
            <block type="juvi_press/pressarticle_list" name="pressarticle_list" template="juvi_press/pressarticle/list.phtml" />
        </reference>
    </juvi_press_pressarticle_index>
    <juvi_press_pressarticle_view translate="label" module="juvi_press">
        <label>Press Article view page</label>
        <update handle="page_one_column" />
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>js/swiper.jquery.min.js</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/swiper.min.css</name>
            </action>
            <block type="core/text" name="google.fonts">
                <action method="setText">
                    <text><![CDATA[<link href='http://fonts.googleapis.com/css?family=Alegreya+Sans+SC:100' rel='stylesheet' type='text/css'>]]></text>
                </action>
            </block>
        </reference>
        <reference name="content">
            <block type="juvi_press/pressarticle_view" name="pressarticle_view" template="juvi_press/pressarticle/view.phtml" />
            <block type="juvi_press/pressarticle_catalog_product_list" name="pressarticle.info.products" as="pressarticle_products" template="juvi_press/pressarticle/catalog/product/list.phtml" />
        </reference>
    </juvi_press_pressarticle_view>
</layout>
